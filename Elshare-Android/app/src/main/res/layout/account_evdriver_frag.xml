<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/driver_f"
    android:layout_height="match_parent"
    tools:context=".account_evdriver_frag"
    tools:ignore="MissingDefaultResource">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#171616"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner15"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="15dp"
                    android:gravity="center"
                    android:textSize="@dimen/size_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp">
                <EditText
                    android:id="@+id/addVihicleYear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:backgroundTint="@color/black"
                    android:cursorVisible="true"
                    android:gravity="center|left"
                    android:hint="@string/addVihicleYear"
                    android:inputType="number"
                    android:textColor="@color/green"
                    android:textColorHighlight="@color/green"
                    android:textSize="@dimen/size_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp">
                <Spinner
                    android:id="@+id/Make_Spinner"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:textSize="@dimen/size_text" />
                <Spinner
                    android:id="@+id/Model_spinner"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/size_text" />

            </LinearLayout>
            <EditText
                android:id="@+id/addDerivceRegistrationNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="70"
                android:backgroundTint="@color/black"
                android:cursorVisible="true"
                android:gravity="center|left"
                android:hint="@string/addVehicleRegistrationNo"
                android:inputType="textPersonName"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/green"
                android:textColorHighlight="@color/green"
                android:textSize="@dimen/size_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addVihicleBatterySize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:background="?attr/editTextBackground"
                    android:backgroundTint="@color/black"
                    android:cursorVisible="true"
                    android:gravity="center|left"
                    android:hint="@string/addVihicleBatterySize"
                    android:inputType="textPersonName"
                    android:textColor="@color/green"
                    android:textColorHighlight="@color/green"
                    android:textSize="@dimen/size_text" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp">

                <EditText
                    android:id="@+id/addDeriverOnBoardSize"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:cursorVisible="true"
                    android:gravity="center|left"
                    android:hint="@string/addDriverOnBoardSize"
                    android:inputType="numberSigned"
                    android:textColor="@color/green"
                    android:textColorHighlight="@color/green"
                    android:textSize="@dimen/size_text" />
            </LinearLayout>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <Button
                android:id="@+id/addDriver"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/roundedbutton"
                android:hint="@string/editDriver"
                android:textSize="@dimen/size_B"
                android:textStyle="bold"
                tools:visibility="visible" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>

