<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/discription"
    tools:context=".LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo_l" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin_text"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="70"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:hint="@string/textView102"
                android:textColor="@color/black"
                android:textColorLink="@color/black"
                android:textSize="@dimen/size_H"
                android:textStyle="bold"
                tools:text="@string/textView102" />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/textView103"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="7"
                android:gravity="end|center"
                android:hint="@string/textView103"
                android:textSize="@dimen/size_text" />

            <Button
                android:id="@+id/button125"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:background="@android:color/transparent"
                android:gravity="start|center"
                android:hint="@string/button125"
                android:textColorHint="#3F51B5"
                android:textSize="@dimen/size_text" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin_text"
            android:orientation="horizontal">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText69"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="70"
                android:backgroundTint="@color/black"
                android:cursorVisible="true"
                android:gravity="center|left"
                android:hint="@string/editText69"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textColorLink="@color/black"
                android:textCursorDrawable="@drawable/text_cursor"
                android:textSize="@dimen/size_text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:passwordToggleEnabled="true"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin_text"
            app:passwordToggleDrawable="@drawable/password_seletcor"
            app:passwordToggleTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText70"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="70"
                android:backgroundTint="@color/black"
                android:cursorVisible="true"
                android:gravity="center|left"
                android:hint="@string/editText70"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/text_cursor"
                android:textSize="@dimen/size_text" />


        </com.google.android.material.textfield.TextInputLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin_text"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="70"
                android:backgroundTint="@color/black"
                android:cursorVisible="true"
                android:gravity="center|right"
                android:text="@string/textView105"
                android:textColor="@color/red"
                android:inputType="textPersonName"
                android:textCursorDrawable="@drawable/text_cursor"
                android:textSize="@dimen/size_text" />

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center">

        <Button
            android:id="@+id/button15"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/roundedbutton"
            android:fontFamily="sans-serif"
            android:hint="@string/button15"
            android:textSize="@dimen/size_B"
            android:textStyle="bold" />
        </TableRow>

        <TextView
            android:id="@+id/textView104"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin_text"
            android:hint="@string/textView104"
            android:textAlignment="center"
            android:textSize="@dimen/size_text" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/new_phone" />

            <ImageButton
                android:id="@+id/google_log"
                style="@android:style/Widget.ImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/googleg_standard_color_18" />

            <ImageButton
                android:id="@+id/fb_log"
                style="@android:style/Widget.ImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/fb_icon_f" />

        </TableRow>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>