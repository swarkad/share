<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:layout_marginHorizontal="@dimen/activity_horizontal_tab"
    >

    <Button
        android:id="@+id/button109"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/bg_text"
        android:gravity="center"
        android:hint="@string/button109"
        android:textColorHint="@color/black"
        android:textSize="@dimen/size_B"
        android:textStyle="bold" />


    <Button
        android:id="@+id/button110"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_text"
        android:gravity="center"
        android:hint="@string/button110"
        android:textColorHint="@color/black"
        android:textSize="@dimen/size_B"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button111"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_text"
        android:gravity="center"
        android:hint="@string/button111"
        android:textColorHint="@color/black"
        android:textSize="@dimen/size_B"
        android:textStyle="bold" />












</LinearLayout>