<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_gravity="top"
    android:background="@drawable/bg_text"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button138"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="30"
            android:background="@drawable/bg_filter"
            android:drawableLeft="@drawable/new_s"
            android:hint="@string/button138"
            android:paddingLeft="5dp"
            android:textColorHint="@color/black"
            android:textSize="11sp" />

        <Button
            android:id="@+id/butto139"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="30"
            android:background="@drawable/bg_filter"
            android:drawableLeft="@drawable/new_three"
            android:hint="@string/button139"
            android:paddingLeft="10dp"
            android:textColorHint="@color/black"
            android:textSize="11sp" />

        <Button
            android:id="@+id/button140"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="30"
            android:background="@drawable/bg_filter"
            android:drawableLeft="@drawable/new_two_i"
            android:hint="@string/button140"
            android:paddingLeft="10dp"
            android:textColorHint="@color/black"
            android:textSize="11sp" />



    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button141"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="30"

            android:background="@drawable/bg_filter"
            android:drawableLeft="@drawable/one_star"
            android:gravity="center"
            android:hint="@string/button141"
            android:paddingLeft="20dp"
            android:textColorHint="@color/black"
            android:textSize="11sp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="200dp"

            android:layout_height="30dp"
            android:layout_weight="30"
            android:background="@android:color/transparent" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="200dp"

            android:layout_height="30dp"
            android:layout_weight="30"
            android:background="@android:color/transparent" />


    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
</LinearLayout>