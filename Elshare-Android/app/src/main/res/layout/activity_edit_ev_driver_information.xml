<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/driver_f"
    android:layout_height="match_parent"
    tools:context=".EditEvDriverInformation"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/editEvDriverBack"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center|start|top"
                android:gravity="center"
                android:background="@color/green"
                android:theme="?attr/actionBarTheme"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                app:theme="@style/ToolbarColoredBackArrow">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:foregroundGravity="center"
                    android:text="@string/editEVDriverLabel"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#171616"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/editvehicleType"
                            style="@android:style/Widget.Holo.Light.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="15dp"
                            android:gravity="center"
                            android:popupBackground="@color/white"
                            android:textSize="@dimen/size_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="15dp">
                        <EditText
                            android:id="@+id/editVehicleYear"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="70"
                            android:backgroundTint="@color/black"
                            android:cursorVisible="true"
                            android:gravity="center|left"
                            android:hint="@string/addVihicleYear"
                            android:inputType="number"
                            android:textColor="@color/green"
                            android:textColorHighlight="@color/green"
                            android:textSize="@dimen/size_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="15dp">
                        <Spinner
                            android:id="@+id/edit_Make_Spinner"
                            style="@android:style/Widget.Holo.Light.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="50"
                            android:gravity="center"
                            android:popupBackground="@color/white"
                            android:textSize="@dimen/size_text" />
                        <Spinner
                            android:id="@+id/edit_Model_spinner"
                            style="@android:style/Widget.Holo.Light.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_weight="50"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            android:popupBackground="@color/white"
                            android:textSize="@dimen/size_text" />

                    </LinearLayout>


                    <EditText
                        android:id="@+id/editDerivceRegistrationNumber"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="70"
                        android:backgroundTint="@color/black"
                        android:cursorVisible="true"
                        android:gravity="center|left"
                        android:hint="@string/addVehicleRegistrationNo"
                        android:inputType="textPersonName"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/green"
                        android:textColorHighlight="@color/green"
                        android:textSize="@dimen/size_text" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/editVehicleBatterySize"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="70"
                            android:background="?attr/editTextBackground"
                            android:backgroundTint="@color/black"
                            android:cursorVisible="true"
                            android:gravity="center|left"
                            android:hint="@string/addVihicleBatterySize"
                            android:inputType="textPersonName"
                            android:textColor="@color/green"
                            android:textColorHighlight="@color/green"
                            android:textSize="@dimen/size_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="20dp">

                        <EditText
                            android:id="@+id/editDeriverOnBoardSize"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/black"
                            android:cursorVisible="true"
                            android:gravity="center|left"
                            android:hint="@string/addDriverOnBoardSize"
                            android:inputType="number"
                            android:textColor="@color/green"
                            android:textColorHighlight="@color/green"
                            android:textSize="@dimen/size_text" />


                    </LinearLayout>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="30dp"/>

                    <Button
                        android:id="@+id/editDriver"
                        android:layout_width="140dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:background="@drawable/roundedbutton"
                        android:hint="@string/editDriver"
                        android:textSize="@dimen/size_B"
                        android:textStyle="bold"
                        tools:visibility="visible" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

