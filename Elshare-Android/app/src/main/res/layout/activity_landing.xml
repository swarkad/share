<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/landinglayout"
    android:background="#FFFFFF"

    android:layout_height="match_parent"
    tools:context=".landing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo_l" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin_text"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView101"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:hint="@string/textView101"
                android:text="@string/textView101"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textSize="@dimen/size_B"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="7"
                android:gravity="end|center"
                android:hint="@string/textView2"
                android:textColor="@color/black"
                android:textColorHighlight="@color/black"
                android:textSize="@dimen/size_text" />

            <Button
                android:id="@+id/button2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:background="@android:color/transparent"
                android:gravity="start|center"
                android:hint="@string/button2"
                android:textColorHint="#3F51B5"
                android:textSize="@dimen/size_text" />
        </LinearLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin_text"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText7"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="70"
                    android:backgroundTint="@color/black"
                    android:cursorVisible="true"
                    android:gravity="center|left"
                    android:hint="@string/editText7"
                    android:inputType="textWebEmailAddress|textEmailAddress"
                    android:textColorHighlight="@color/black"
                    android:textColorLink="@color/black"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="@dimen/size_text"
                    android:theme="@style/MyText" />
            </com.google.android.material.textfield.TextInputLayout>

        </TableRow>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin_text"
            android:orientation="horizontal">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText2"
                style="@style/myEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="70"
                android:backgroundTint="@color/black"
                android:cursorVisible="true"
                android:gravity="center|left"
                android:hint="@string/editText2"
                android:inputType="phone"
                android:textColorHighlight="@color/black"
                android:textColorLink="@color/black"
                android:textCursorDrawable="@drawable/text_cursor"
                android:textSize="@dimen/size_text" />
        </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_landing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin_text"
                app:passwordToggleDrawable="@drawable/password_seletcor"
                app:passwordToggleTint="@color/black">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText8"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="70"
                    android:backgroundTint="@color/black"
                    android:cursorVisible="true"
                    android:gravity="center|left"
                    android:hint="@string/editText8"
                    android:inputType="textPassword"
                    android:textColorHighlight="@color/black"
                    android:textColorLink="@color/black"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="@dimen/size_text"
                    android:theme="@style/MyText" />
            </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin_text"
            android:orientation="horizontal"
            app:passwordToggleEnabled="true"
           app:passwordToggleDrawable="@drawable/password_seletcor"
            app:passwordToggleTint="@color/black">

           <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText67"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:cursorVisible="true"
                android:gravity="center|left"
                android:hint="@string/editText67"
                android:inputType="textPassword"
                android:textColorHighlight="@color/black"
                android:textColorLink="@color/black"
                android:textCursorDrawable="@drawable/text_cursor"
                android:textSelectHandle="?attr/editTextBackground"
                android:textSize="@dimen/size_text"
                android:theme="@style/MyText" />
        </com.google.android.material.textfield.TextInputLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin_text"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText80"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="70"
                android:backgroundTint="@color/black"
                android:cursorVisible="true"
                android:gravity="center|left"
                android:hint="@string/editText80"
                android:inputType="textPersonName"
                android:textColorHighlight="@color/black"
                android:textColorLink="@color/black"
                android:textCursorDrawable="@drawable/text_cursor"
                android:textSize="@dimen/size_text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/t_c_checkbox"
                style="@android:style/Widget.Holo.CompoundButton.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center|left"
                android:layout_weight="30"
                android:hint="@string/checkBox"
                android:textSize="@dimen/size_text" />

            <Button
                android:id="@+id/button133"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="70"
                android:background="@android:color/transparent"
                android:gravity="center|left"
                android:hint="@string/button133"
                android:onClick="hooray"
                android:textColor="@color/blue"
                android:textColorHighlight="@color/blue"
                android:textColorHint="@color/blue"
                android:textSize="@dimen/size_text" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/button6"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/roundedbutton"
                android:fontFamily="sans-serif"
                android:hint="@string/button6"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin_text"
            android:gravity="center"
            android:hint="@string/textView5"
            android:textAlignment="center"
            android:textSize="@dimen/size_text" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/new_phone" />

            <ImageButton
                android:id="@+id/imageButton4"
                style="@android:style/Widget.ImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="showPopUp3"
                app:srcCompat="@drawable/googleg_standard_color_18"
                tools:ignore="OnClick" />

            <ImageButton
                android:id="@+id/imageButton5"
                style="@android:style/Widget.ImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/fb_icon_f" />

        </TableRow>


        <Button
            android:id="@+id/button132"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom|right|end"
            android:background="@android:color/transparent"
            android:gravity="bottom|right|end"
            android:hint="@string/button132"
            android:onClick="skipme"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:textColorLink="@color/blue"
            android:textSize="@dimen/size_text" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>